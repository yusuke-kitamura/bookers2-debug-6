<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to (@book.user) do %>
						<%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg" %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, @book %></td>
					<td><%= @book.body %></td>

					<td id = "favorites_btn_<%= @book.id %>">
						<% if @book.favorited_by?(current_user) %>
						  <%= link_to book_favorites_path(@book.id), method: :delete, remote: true do %>
						  <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
						  	<%= @book.favorites.count %>
						  <% end %>

						  <% else %>

						  <%= link_to book_favorites_path(@book.id), method: :post, remote: true do %>
						  <i class="fa fa-heart-o" aria-hidden="true"></i>
						  <%= @book.favorites.count %>
						  <% end %>
						<% end %>
					</td>

					<td>
						<span>コメント数:</span>
						<%= @book.book_comments.count %>
					</td>

					<% if @book.user == current_user %>
					<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					<% end %>
				</tr>
			</table>

			<!-- コメント一覧 -->
			<table class="table">
				<h2>Book Comments</h2>

				<% @book.book_comments.each do |book_comment| %>
				<tr>
					<td><%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg" %><br>
					<%= book_comment.user.name %></td>
					<td><%= book_comment.comment %></td>

					<% if book_comment.user == current_user %>
					<td><%= link_to "Destroy", book_book_comment_path(book_comment), method: :delete, class: "btn-sm btn-danger" %></td>
					<% end %>
				</tr>
				<% end %>
			</table>
			<!-- コメント一覧 -->


			<!-- コメントform -->
			<div class="comment_form">
				<%= form_with [@book, @book_comment] do |f| %>
				<%= f.text_area :comment, size:"90x5" %>
				<%= f.submit "Comment", class: "btn btn-primary" %>
				<% end %>
			</div>
			<!-- コメントform -->

	</div>
</div>

